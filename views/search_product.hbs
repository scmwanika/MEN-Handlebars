<style>
  body {
    /* Padding to prevent the content to go underneath the header */
    padding-top: 75px;
    font-family: Courier;
  }

  .navbar {
    width: 100%;
    position: fixed;
    top: 0;
  }

  span {
    color: black;
    font-size: 18pt;
  }

  .logout {
    color: red;
    font-size: 12pt;
  }

  form {
    text-align: center;
  }

  input[name='product_name'] {
    width: 290px;
    border: none;
    padding-top: 2px;
    padding-bottom: 4px;
  }

  .submit {
    width: 290px;
    border: none;
  }

  .listing-table {
    margin: 0 auto;
  }

  th {
    width: 180px;
  }
</style>

<!-- SEARCH PRODUCT -->
<table class="listing-table table-striped">
  <tr>
    <td colspan="2">
      <form class="search" action="/products/search"><input name="product_name" placeholder="product name" /><button
          class="btn btn-white" type="submit">Search</button></form>
    </td>
  </tr>
  {{#each products}}
  <tr>
    <th><br></th>
    <td><br></td>
  </tr>
  <tr>
    <th>Product Name:</th>
    <td>{{this.product_name}}</td>
  </tr>
  <tr>
    <th>Category:</th>
    <td>{{this.category}}</td>
  </tr>
  <tr>
    <th>Retail Price:</th>
    <td>{{this.retail_price}}</td>
  </tr>
  <tr>
    <th>Quantity Purchased:</th>
    <td>{{this.quantity_purchased}}</td>
  </tr>
  <tr>
    <th>Purchases:</th>
    <td>{{this.purchases}}</td>
  </tr>
  <tr>
    <th>Quantity sold:</th>
    <td>{{this.quantity_sold}}</td>
  </tr>
  <tr>
    <th>Sales:</th>
    <td>{{this.sales}}</td>
  </tr>
  <tr>
    <th>Quantity Instock:</th>
    <td>{{this.quantity_instock}}</td>
  </tr>
  <tr>
    <th>Closing Stock:</th>
    <td>{{this.closing_stock}}</td>
  </tr>
  <tr>
    <th>Cost of Sales:</th>
    <td>{{this.cost_of_sales}}</td>
  </tr>
  <tr>
    <th>Gross Profit:</th>
    <td>{{this.gross_profit}}</td>
  </tr>
  <tr>
    <th>Discontinued:</th>
    <td>{{this.discontinued}}</td>
  </tr>
  <tr>
    <th></th>
    <td>
      <a href="/products/{{this._id}}"> TRANSACT </a>
      {{!-- <a href="/products/delete/{{this._id}}" onclick="return confirm('Sure you want to delete this record?');">
        Delete </a> --}}
    </td>
  </tr>
  {{/each}}
</table>