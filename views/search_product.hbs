<style>
  th {
    width: 160px;
    text-align: justify;
    font-weight: lighter;
  }

  td {
    width: 75px;
    text-align: right;
  }

  select {
    width: 245px;
    border: none;
    margin-top: 4.5px;
  }

  .search {
    border: none;
    width: 100%;
  }
</style>

<!-- SEARCH PRODUCT -->
<table class="listing-table table-striped">
  <tr>
    <form action="/products/search">
      <td colspan="2">
        <select name="product_name">
          {{#each items}}
          <option class="select-option" value="">Search Product ...</option>
          <option value={{this.product_name}}>{{this.product_name}}</option>
          {{/each}}
        </select>
      </td>
      <td>
        <button class="search" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
      </td>
    </form>
  </tr>
  {{#each products}}
  <tr>
    <th><br></th>
    <td><br></td>
    <td><br></td>
  </tr>
  <tr>
    <th style="font-weight: bolder">{{this.product_name}}</th>
    <td><b>Qty.{{this.measurement}}</b></td>
    <td><b>USh.</b></td>
  </tr>
  <tr>
    <th>Purchases</th>
    <td>{{this.quantity_purchased}}</td>
    <td>{{this.net_purchases}}</td>
  </tr>
  <tr>
    <th>Sales</th>
    <td>{{this.quantity_sold}}</td>
    <td>{{this.net_sales}}</td>
  </tr>
  <tr>
    <th>Closing Stock</th>
    <td>{{this.quantity_instock}}</td>
    <td>{{this.closing_stock}}</td>
  </tr>
  <tr>
    <th>Cost of Sales</th>
    <td>{{this.quantity_sold}}</td>
    <td>{{this.cost_of_sales}}</td>
  </tr>
  <tr>
    <th>Gross Profit / Loss</th>
    <td>{{this.quantity_sold}}</td>
    <td>{{this.gross_profit_or_loss}}</td>
  </tr>
  <tr>
    <th style="font-weight: bolder" colspan="3">
      <a href="/purchases/products/{{this._id}}">purchase</a>
      <a style="padding-left: 10px" href="/sales/products/{{this._id}}">sale</a>
      <a style="padding-left: 10px" href="/drawings/products/{{this._id}}">withdraw</a>
      {{!-- <a href="/products/delete/{{this._id}}" onclick="return confirm('Sure you want to delete this record?');">
        Delete </a> --}}
    </th>
  </tr>
  {{/each}}
</table>