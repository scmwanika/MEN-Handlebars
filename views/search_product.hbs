<style>
  body {
    /* Padding to prevent the content to go underneath the header */
    padding-top: 75px;
    font-family: Courier;
  }

  .navbar {
    width: 100%;
    position: fixed;
    top: 0;
  }

  span {
    color: black;
    font-size: 18pt;
  }

  form {
    text-align: center;
  }

  input[name='product_name'] {
    width: 290px;
    border: none;
    padding-top: 2px;
    padding-bottom: 4px;
  }

  .submit {
    width: 290px;
    border: none;
  }

  .listing-table {
    margin: 0 auto;
  }

  th {
    width: 150px;
  }
</style>

<!-- SEARCH PRODUCT -->
<table class="listing-table table-striped">
  <tr>
    <td colspan="2">
      <form class="search" action="/products/list"><input name="product_name" placeholder="product name" /><button
          class="btn btn-white" type="submit">Search</button></form>
    </td>
  </tr>
  {{#each products}}
  <tr>
    <th><br></th>
    <td><br></td>
  </tr>
  <tr>
    <th>Product Name:</th>
    <td>{{this.product_name}}</td>
  </tr>
  <tr>
    <th>Category:</th>
    <td>{{this.category}}</td>
  </tr>
  <tr>
    <th>Retail Price:</th>
    <td>{{this.retail_price}}</td>
  </tr>
  <tr>
    <th>Units Received:</th>
    <td>{{this.units_received}}</td>
  </tr>
  <tr>
    <th>Value Received:</th>
    <td>{{this.value_received}}</td>
  </tr>
  <tr>
    <th>Units Issued:</th>
    <td>{{this.units_issued}}</td>
  </tr>
  <tr>
    <th>Value Issued:</th>
    <td>{{this.value_issued}}</td>
  </tr>
  <tr>
    <th>Units Instock:</th>
    <td>{{this.units_instock}}</td>
  </tr>
  <tr>
    <th>Value Instock:</th>
    <td>{{this.value_instock}}</td>
  </tr>
  <tr>
    <th>Sales Cost:</th>
    <td>{{this.sales_cost}}</td>
  </tr>
  <tr>
    <th>Gross Profit:</th>
    <td>{{this.gross_profit}}</td>
  </tr>
  <tr>
    <th>Discontinue:</th>
    <td>{{this.discontinue}}</td>
  </tr>
  <tr>
    <th>click to:</th>
    <td>
      <a href="/products/{{this._id}}"> TRANSACT </a>
      {{!-- <a href="/products/delete/{{this._id}}" onclick="return confirm('Sure you want to delete this record?');">
        Delete </a> --}}
    </td>
  </tr>
  {{/each}}
</table>