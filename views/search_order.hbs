<style>
  .navbar {
    width: 100%;
    position: fixed;
    top: 0;
  }

  body {
    /* Padding to prevent the content to go underneath the header */
    padding-top: 75px;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    background-color: #ebebed;
  }

  span {
    color: blue;
    font-size: 24pt;
    font-weight: bolder;
    font-family: Monotype Corsiva;
  }

  a {
    font-size: 11pt;
  }

  .dropdown-menu {
    border: none;
  }

  .logout {
    color: white;
    font-size: 12pt;
    margin-left: 24px;
  }

  .listing-table {
    margin: 0 auto;
  }

  th {
    width: 106.5px;
    padding-left: 4.5%;
  }

  td {
    width: 106.5px;
    text-align: right;
    padding-right: 7.5%;
  }

  footer {
    width: 100%;
    position: fixed;
    bottom: 0;
    font-size: 12pt;
    text-align: center;
  }
</style>

<!-- LIST DEBTORS -->
<table class="listing-table table-striped">
  <tr>
    <td colspan="2">
      <form class="search" action="/orders/search"><input name="name" placeholder="your name" /><button
          class="btn btn-white" type="submit">Search</button></form>
    </td>
  </tr>
  <tr>
    <th colspan="3">INVOICE</th>
  </tr>
  {{#each debtors}}
  <tr>
    <td><br></td>
    <td><br></td>
    <td><br></td>
  </tr>
  <tr>
    <th>TO:</th>
    <th colspan="2">{{this.userId}}</th>
  </tr>
  <tr>
    <th colspan="3" style="font-weight: lighter">{{this.product}}</th>
  </tr>
  <tr>
    <th>Quantity:</th>
    <th>Unit Cost:</th>
    <th>Total Cost:</th>
  </tr>
  <tr>
    <td>{{this.quantity}}</td>
    <td>{{this.unit_cost}}</td>
    <td>{{this.total_cost}}</td>
  </tr>
  <tr>
    <th>{{this.payment}}:</th>
    <td colspan="2">{{this.initial_payment}}</td>
  </tr>
  <tr>
    <th>Discount:</th>
    <td colspan="2">0</td>
  </tr>
  <tr>
    <th>Balance:</th>
    <td colspan="2" style="color: red">{{this.debtor}}</td>
  </tr>
  <tr>
    <td></td>
    <td></td>
    <td><a href="/transactions/{{this._id}}"> Open </a></td>
  </tr>
  {{/each}}
</table>