<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Stock Manager</title>
  <style>
    header {
      width: 100%;
      position: fixed;
      top: 0;
    }

    .flex-container {
      display: flex;
      flex-direction: row;
    }

    form {
      flex: 20%;
      text-align: center;
    }

    /* Responsive layout */
    @media (max-width: 800px) {
      .flex-container {
        flex-direction: column;
      }
    }

    .listing-table {
      margin: 0 auto;
    }

    legend,
    label,
    h6 {
      color: orange;
      margin-bottom: 0;
    }

    input[type="text"],
    input[type="number"],
    input[type="date"],
    input[type="email"],
    input[type="url"],
    select {
      width: 290px;
      padding: 0.75%;
      margin-bottom: 5px;
      font-size: 12pt;
      font-weight: bolder;
      border: 1px solid grey;
    }

    input[type="radio"] {
      width: 50px;
    }

    .btn-success,
    .submit {
      width: 290px;
      border: none;
      font-weight: bolder;
    }
    input[name='product_name'] {
      width: 230px;
    }
  </style>
</head>

<table class="listing-table table-info table-striped">
  <tr>
    <td colspan="2">
      <form class="search" action="/products/list"><input name="product_name"
          placeholder="product-name / category" /><button class="btn btn-white" type="submit">Search</button></form>
    </td>
  </tr>
  {{#each products}}
  <tr>
    <th><br></th>
    <td><br></td>
  </tr>
  <tr>
    <th>Product Name:</th>
    <td>{{this.product_name}}</td>
  </tr>
  <tr>
    <th>Category:</th>
    <td>{{this.category}}</td>
  </tr>
  <tr>
    <th>Retail Price:</th>
    <td>{{this.retail_price}}</td>
  </tr>
  <tr>
    <th>Units Received:</th>
    <td>{{this.units_received}}</td>
  </tr>
  <tr>
    <th>Value Received:</th>
    <td>{{this.value_received}}</td>
  </tr>
  <tr>
    <th>Units Issued:</th>
    <td>{{this.units_issued}}</td>
  </tr>
  <tr>
    <th>Value Issued:</th>
    <td>{{this.value_issued}}</td>
  </tr>
  <tr>
    <th>Units Instock:</th>
    <td>{{this.units_instock}}</td>
  </tr>
  <tr>
    <th>Value Instock:</th>
    <td>{{this.value_instock}}</td>
  </tr>
  <tr>
    <th>Sales Cost:</th>
    <td>{{this.sales_cost}}</td>
  </tr>
  <tr>
    <th>Gross Profit:</th>
    <td>{{this.gross_profit}}</td>
  </tr>
  <tr>
    <th>Discontinue:</th>
    <td>{{this.discontinue}}</td>
  </tr>
  <tr>
    <th>click here to:</th>
    <td>
      <a href="/products/{{this._id}}"> Edit </a>
      <a href="/products/delete/{{this._id}}" onclick="return confirm('Sure you want to delete this record?');"> Delete
    </td>
  </tr>
  {{/each}}
</table>

</html>