<style>
  th {
    width: 106.5px;
    padding-left: 4.5%;
  }

  td {
    width: 106.5px;
    text-align: right;
    padding-right: 7.5%;
  }
</style>

<!-- LIST DEBTORS -->
<table class="listing-table table-striped">
  <tr>
    <th colspan="3">INVOICE</th>
  </tr>
  {{#each debtors}}
  <tr>
    <td><br></td>
    <td><br></td>
    <td><br></td>
  </tr>
  <tr>
    <th>TO:</th>
    <th colspan="2" style="font-weight: lighter">{{this.userId}}</th>
  </tr>
  <tr>
    <th colspan="3" style="font-weight: lighter">{{this.product}}</th>
  </tr>
  <tr>
    <th>Quantity:</th>
    <th>Unit Cost:</th>
    <th>Total Cost:</th>
  </tr>
  <tr>
    <td>{{this.quantity}}</td>
    <td>{{this.unit_cost}}</td>
    <td>{{this.total_cost}}</td>
  </tr>
  <tr>
    <th>{{this.payment}}:</th>
    <td colspan="2">{{this.initial_payment}}</td>
  </tr>
  <tr>
    <th>Discount:</th>
    <td colspan="2">0</td>
  </tr>
  <tr>
    <th>Balance:</th>
    <td colspan="2" style="color: red">{{this.debtor}}</td>
  </tr>
  <tr>
    <td></td>
    <td></td>
    <td><a href="/transactions/{{this._id}}"> Pay </a></td>
  </tr>
  {{/each}}
</table>