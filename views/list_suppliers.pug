extends layout

block content
  style.
    .navbar {
    width: 100%;
    position: fixed;
    top: 0;
    }
    body {
    /* Padding to prevent the content to go underneath the header */
    padding-top: 75px;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    background-color: #ebebed;
    }
    span {
    color: blue;
    font-size: 22pt;
    font-weight: bolder;
    font-family: Monotype Corsiva;
    }
    .dropdown-menu {
    border: none;
    }
    a,
    label {
    font-size: 11pt;
    }
    .listing-table {
    margin: 0 auto;
    }
    th {
    width: 100px;
    }
    td {
    width: 220px;
    }
    form {
    margin: 0 auto;
    }
    .logout {
    color: white;
    font-size: 12pt;
    margin-left: 24px;
    }
    footer {
    width: 100%;
    position: fixed;
    bottom: 0;
    font-size: 12pt;
    text-align: center;
    }
  // LIST SUPPLIERS
  table.listing-table.table-striped
    tr
      th(colspan='2') SUPPLIERS
    each supplier in suppliers
      tr
        th
          br
        td
          br
      tr
        th Name:
        td #{supplier.name}
      tr
        th Country:
        td #{supplier.country}
      tr
        th City:
        td #{supplier.city}
      tr
        th Street:
        td #{supplier.street}
      tr
        th Address:
        td #{supplier.address}
      tr
        th Telephone:
        td #{supplier.telephone}
      tr
        th Email:
        td #{supplier.email}
      tr
        th Website:
        td #{supplier.website}
      tr
        th
        td
          a(href=`/suppliers/${supplier._id}`)  Open 
