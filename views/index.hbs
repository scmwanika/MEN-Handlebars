<style>
  .navbar {
    display: none;
  }

  body {
    background-image: url('WallpaperDog-860686.jpg');
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-size: cover;
    color: #FFFFFF;
  }

  a {
    font-size: 12pt;
    font-weight: lighter;
  }

  form {
    text-align: center;
  }

  select {
    width: 170px;
    font-size: 14pt;
    color: #FFFFFF;
    background-color: #000000;
  }

  .btn-white {
    width: 40px;
    font-size: 14pt;
    color: #ebebed;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    column-gap: 20px;
    text-align: center;
    border: none;
  }

  img {
    width: 100%;
    height: 50%;
  }

  footer {
    color: #000000;
  }
</style>

<form class="search" action="/">
  <select name="category">
    <option value="">Search Products</option>
    <option value="Horticulture">Horticulture</option>
    <option value="Poultry">Poultry</option>
  </select><button class="btn btn-white" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
</form>
<br />
<div class="cards">
  {{#each products}}
  <div>
    <img src={{this.product_name}}.jpg />
    <div class="card-title"><b>{{this.product_name}}</b></div>
    <div class="card-text">{{this.retail_price}} Ugx. /Kg</div>
    <div class="card-text">Available: {{this.quantity_instock}} Kg</div>
    <a href="/items/{{this._id}}"> order </a>
  </div>
  {{/each}}
</div>