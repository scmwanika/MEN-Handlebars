<style>
  body {
    /* Padding to prevent the content to go underneath the header */
    padding-top: 75px;
    font-family: Courier;
  }

  .navbar {
    width: 100%;
    position: fixed;
    top: 0;
  }

  span {
    color: black;
    font-size: 18pt;
  }

  form {
    text-align: center;
  }

  input[name='account_name'] {
    width: 290px;
    border: none;
    padding-top: 2px;
    padding-bottom: 4px;
  }

  .submit {
    width: 290px;
    border: none;
  }

  .listing-table {
    margin: 0 auto;
  }

  th {
    width: 150px;
  }
</style>

<!-- SEARCH ACCOUNT -->
<table class="listing-table table-striped">
  <tr>
    <td colspan="2">
      <form class="search" action="/accounts/list"><input name="account_name" placeholder="account name" /><button
          class="btn btn-white" type="submit">Search</button></form>
    </td>
  </tr>
  {{#each accounts}}
  <tr>
    <th><br></th>
    <td><br></td>
  </tr>
  <tr>
    <th>Account Name:</th>
    <td>{{this.account_name}}</td>
  </tr>
  <tr>
    <th>Amount:</th>
    <td>{{this.amount}}</td>
  </tr>
  <tr>
    <th>Notes:</th>
    <td>{{this.notes}}</td>
  </tr>
  <tr>
    <th>click to:</th>
    <td>
      <a href="/accounts/{{this._id}}"> EDIT </a>
      {{!-- <a href="/accounts/delete/{{this._id}}" onclick="return confirm('Sure you want to delete this record?');">
        DELETE </a> --}}
    </td>
  </tr>
  {{/each}}
</table>