<style>
  .navbar {
    width: 100%;
    position: fixed;
    top: 0;
  }

  body {
    /* Padding to prevent the content to go underneath the header */
    padding-top: 75px;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    background-color: #ebebed;
  }


  span {
    color: #0000FF;
    font-size: 22pt;
    font-weight: lighter;
    font-family: Monotype Corsiva;
  }

  .dropdown-menu {
    border: none;
  }

  a,
  label {
    font-size: 11pt;
  }

  .listing-table {
    margin: 0 auto;
  }

  th {
    width: 100px;
  }

  td {
    width: 220px;
  }

  form {
    margin: 0 auto;
  }

  .logout {
    border: none;
    font-size: 12pt;
    margin-left: 24px;
  }

  footer {
    width: 100%;
    position: fixed;
    bottom: 0;
    font-size: 12pt;
    text-align: center;
  }
</style>

<!-- LIST SUPPLIERS -->
<table class="listing-table table-striped">
  <tr>
    <th colspan="2">SUPPLIERS</th>
  </tr>
  {{#each suppliers}}
  <tr>
    <th><br></th>
    <td><br></td>
  </tr>
  <tr>
    <th>Name:</th>
    <td>{{this.name}}</td>
  </tr>
  <tr>
    <th>Country:</th>
    <td>{{this.country}}</td>
  </tr>
  <tr>
    <th>City:</th>
    <td>{{this.city}}</td>
  </tr>
  <tr>
    <th>Street:</th>
    <td>{{this.street}}</td>
  </tr>
  <tr>
    <th>Address:</th>
    <td>{{this.address}}</td>
  </tr>
  <tr>
    <th>Telephone:</th>
    <td>{{this.telephone}}</td>
  </tr>
  <tr>
    <th>Email:</th>
    <td>{{this.email}}</td>
  </tr>
  <tr>
    <th>Website:</th>
    <td>{{this.website}}</td>
  </tr>
  <tr>
    <th></th>
    <td>
      <a href="/suppliers/{{this._id}}"> Open </a>
    </td>
  </tr>
  {{/each}}
</table>