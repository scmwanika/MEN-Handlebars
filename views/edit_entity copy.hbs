<style>
  body {
    /* Padding to prevent the content to go underneath the header */
    padding-top: 75px;
    font-family: Courier;
  }

  .navbar {
    width: 100%;
    position: fixed;
    top: 0;
  }

  span {
    color: black;
    font-size: 18pt;
  }

  .flex-container {
    display: flex;
    flex-direction: row;
  }

  form {
    flex: 20%;
    text-align: center;
  }

  /* Responsive layout */
  @media (max-width: 800px) {
    .flex-container {
      flex-direction: column;
    }
  }

  legend,
  label,
  h6 {
    color: orange;
    margin-bottom: 0;
  }

  input[type="text"],
  input[type="date"],
  input[type="email"],
  input[type="url"],
  select {
    width: 290px;
    padding: 0.75%;
    margin-bottom: 5px;
    font-size: 12pt;
    border: 1px solid grey;
  }

  .submit {
    width: 290px;
    border: none;
  }
</style>

<div class="flex-container">
  <!-- SUPPLIER FORM-->
  <form method="POST" action="/suppliers">
    <fieldset>
      <legend>Supplier</legend><br /><label>Supplier Name:</label><br /><input id="supplier_name" type="text"
        name="supplier_name" /><br /><label>Country:</label><br /><input id="country" type="text"
        name="country" /><br /><label>City/Town:</label><br /><input id="city" type="text"
        name="city" /><br /><label>Street:</label><br /><input id="street" type="text"
        name="street" /><br /><label>Address:</label><br /><input id="address" type="text"
        name="address" /><br /><label>Telephone:</label><br /><input id="telephone" type="text"
        name="telephone" /><br /><label>Email:</label><br /><input id="email" type="email"
        name="email" /><br /><label>Website: </label><br /><input id="website" type="url" name="website" /><br /><button
        class="btn btn-success submit" type="submit">Save</button><br />
    </fieldset>
  </form>
  <!-- PURCHASE FORM-->
  <form method="POST" action="/purchases">
    <fieldset>
      <legend>Bought from</legend><br /><label>Supplier Name:</label><br /><input id="supplier_name" type="text"
        name="supplier_name" /><br /><label>Product bought:</label><br /><input id="product_purchased" type="text"
        name="product_purchased" /><br /><label>Units Purchased:</label><br /><input id="units_purchased" type="text"
        name="units_purchased" oninput='runApp()' /><br /><label>Unit Value:</label><br /><input id="unit_cost"
        type="text" name="unit_cost" oninput='runApp()' /><br /><label>Purchased Value:</label><br /><input
        id="total_cost" type="text" name="total_cost" /><br /><button class="btn btn-success submit"
        type="submit">Save</button><br />
    </fieldset>
  </form>
  <!-- PRODUCT FORM-->
  <form method="POST" action="/products">
    <input type="hidden" name="_id" value="{{product._id}}">
    <fieldset>
      <legend>Product</legend><br /><label>Product Name:</label><br /><input id="product_name" type="text"
        name="product_name" value="{{product.product_name}}"
        oninput='runApp()' /><br /><label>Category:</label><br /><input id="category" type="text" name="category"
        value="{{product.category}}" /><br /><label>Retail Price:</label><br /><input id="retail_price" type="text"
        name="retail_price" value="{{product.retail_price}}" oninput='runApp()' /><br /><label>Units
        Received:</label><br /><input id="units_received" type="text" name="units_received"
        value="{{product.units_received}}" /><br /><label>Value Received:</label><br /><input id="value_received"
        type="text" name="value_received" value="{{product.value_received}}" /><br /><label>Units
        Issued:</label><br /><input id="units_issued" type="text" name="units_issued"
        value="{{product.units_issued}}" /><br /><label>Value Issued:</label><br /><input id="value_issued" type="text"
        name="value_issued" value="{{product.value_issued}}" /><br /><label>Units Instock:</label><br /><input
        id="units_instock" type="text" name="units_instock" value="{{product.units_instock}}" /><br /><label>Value
        Instock:</label><br /><input id="value_instock" type="text" name="value_instock"
        value="{{product.value_instock}}" /><br /><label>Sales Cost: </label><br /><input id="sales_cost" type="text"
        name="sales_cost" value="{{product.sales_cost}}" /><br /><label>Gross Profit: </label><br /><input
        id="gross_profit" type="text" name="gross_profit" value="{{product.gross_profit}}" /><br /><label>Discontinue:
      </label><br /><select id="discontinue" name="discontinue">
        <option value=""> Select... </option>
        <option value="No">No</option>
        <option value="Yes">Yes</option>
      </select><br /><button class="btn btn-success submit" type="submit">Save</button><br />
    </fieldset>
  </form>
  <!-- SALE FORM-->
  <form method="POST" action="/sales">
    <fieldset>
      <legend>Sold to</legend><br /><label>Customer Name:</label><br /><input id="customer_name" type="text"
        name="customer_name" /><br /><label>Product sold:</label><br /><input id="product_sold" type="text"
        name="product_sold" /><br /><label>Units Sold:</label><br /><input id="units_sold" type="text" name="units_sold"
        oninput='runApp()' /><br /><label>Unit Value:</label><br /><input id="unit_price" type="text" name="unit_price"
        oninput='runApp()' /><br /><label>Sold Value:</label><br /><input id="total_price" type="text"
        name="total_price" /><br /><button class="btn btn-success submit" type="submit">Save</button><br />
    </fieldset>
  </form>
  <!-- CUSTOMER FORM-->
  <form method="POST" action="/customers">
    <fieldset>
      <legend>Customer</legend><br /><label>Customer Name:</label><br /><input id="customer_name" type="text"
        name="customer_name" /><br /><label>Country:</label><br /><input id="country" type="text"
        name="country" /><br /><label>City/Town:</label><br /><input id="city" type="text"
        name="city" /><br /><label>Street:</label><br /><input id="street" type="text"
        name="street" /><br /><label>Address:</label><br /><input id="address" type="text"
        name="address" /><br /><label>Telephone:</label><br /><input id="telephone" type="text"
        name="telephone" /><br /><label>Email:</label><br /><input id="email" type="email"
        name="email" /><br /><label>Website: </label><br /><input id="website" type="url" name="website" /><br /><button
        class="btn btn-success submit" type="submit">Save</button><br />
    </fieldset>
  </form>
</div>

<script type="text/javascript">
  // FUNCTION TO MANAGE APP
  const runApp = () => {
    // PRODUCT
    document.getElementById('product_purchased').value = document.getElementById('product_name').value;
    document.getElementById('product_sold').value = document.getElementById('product_name').value;
    document.getElementById('unit_price').value = document.getElementById('retail_price').value;
    // PURCHASES
    var units_purchased = document.getElementById('units_purchased').value;
    var unit_cost = document.getElementById('unit_cost').value;
    document.getElementById('total_cost').value = units_purchased * unit_cost;
    // SALES
    var units_sold = document.getElementById('units_sold').value;
    var unit_price = document.getElementById('unit_price').value;
    document.getElementById('total_price').value = units_sold * unit_price;
  }
</script>