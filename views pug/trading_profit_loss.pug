extends layout

block content
  style.
    .navbar {
    width: 100%;
    position: fixed;
    top: 0;
    }
    body {
    /* Padding to prevent the content to go underneath the header */
    padding-top: 75px;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    background-color: #ebebed;
    }
    span {
    color: blue;
    font-size: 22pt;
    font-weight: bolder;
    font-family: Monotype Corsiva;
    }
    .dropdown-menu {
    border: none;
    }
    a,
    label {
    font-size: 11pt;
    }
    .listing-table {
    margin: 0 auto;
    }
    th,
    td {
    width: 160px;
    }
    .logout {
    color: white;
    font-size: 12pt;
    margin-left: 24px;
    }
    footer {
    width: 100%;
    position: fixed;
    bottom: 0;
    font-size: 12pt;
    text-align: center;
    }
  // TRADING AND PROFIT AND LOSS ACCOUNT
  table.listing-table.table-striped
    each product in products
      tr
        th(colspan='2') TRADING, PROFIT / LOSS ACCOUNT
      tr
        td Net Purchases:
        td #{product.net_purchases}
      tr
        td Net Sales:
        td #{product.net_sales}
      tr
        td Closing Stock:
        td #{product.closing_stock}
      tr
        td Cost of Sales:
        td #{product.cost_of_sales}
      tr
        td Gross Profit or Loss:
        td #{product.gross_profit_or_loss}
